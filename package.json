{
  "name": "storefront-quilt-explorations-workspace",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "pnpm -r run build",
    "develop": "concurrently \"pnpm run graphql:types --watch\" \"pnpm -r run develop\"",
    "format": "prettier --write --cache .",
    "lint": "prettier --check --cache .",
    "test": "vitest",
    "graphql:types": "quilt-graphql-typescript --package @quilted/quilt/graphql",
    "type-check": "tsc --build --pretty",
    "typescript:run": "tsx --conditions quilt:source",
    "typescript:watch": "tsx watch --conditions quilt:source"
  },
  "devDependencies": {
    "@quilted/graphql-tools": "^0.2.7",
    "@quilted/rollup": "^0.2.35",
    "@quilted/typescript": "^0.3.1",
    "@quilted/vite": "^0.1.23",
    "concurrently": "^8.2.2",
    "prettier": "^3.0.0",
    "rollup": "^4.14.0",
    "tsx": "^4.9.0",
    "typescript": "^5.5.0",
    "vite": "^5.2.0",
    "vitest": "^1.6.0"
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "packageManager": "pnpm@9.5.0+sha512.140036830124618d624a2187b50d04289d5a087f326c9edfc0ccd733d76c4f52c3a313d4fc148794a2a9d81553016004e6742e8cf850670268a7387fc220c903"
}
